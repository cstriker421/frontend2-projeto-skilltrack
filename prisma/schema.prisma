generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  username  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  skills    Skill[]
}

model Skill {
  id          String      @id @default(cuid())
  userId      String
  title       String
  description String?
  level       SkillLevel  @default(BEGINNER)
  progress    Int         @default(0) // 0..100
  isArchived  Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  resources   Resource[]
}

model Resource {
  id        String         @id @default(cuid())
  skillId   String
  title     String
  url       String?
  type      ResourceType   @default(ARTICLE)
  status    ResourceStatus @default(PLANNED)
  notes     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  skill     Skill          @relation(fields: [skillId], references: [id], onDelete: Cascade)
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ResourceType {
  COURSE
  BOOK
  ARTICLE
  VIDEO
  CERTIFICATION
}

enum ResourceStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
}
